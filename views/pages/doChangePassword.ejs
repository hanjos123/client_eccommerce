<section class="signin-page account">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="block text-center">
                    <h2 class="text-center">Đổi mật khẩu</h2>
                    <form action="<%=process.env.DOMAIN_API%>/changepassword/<%= params.email%>/<%= params.token %>" method="post" class="text-left clearfix" id="formDoChangePassword">

                                <div class="form-group">
                                    <input name="password" required type="password" class="form-control"
                                        placeholder="Mật Khẩu Mới">
                                </div>
                                <div class="text-center">
                                    <button type="submit" class="button dark text-center">Xác nhận</button>
                                </div>
                    </form>
                    <p class="mt-20">Bạn Chưa Có Tài Khoản ?<a href="/account/register"> Tạo Tài Khoản</a></p>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="<%= process.env.DOAMAIN_NAME %>/assets/vendor/libs/jquery/jquery.js"></script>
<script>
    $("#formDoChangePassword").submit(function (e) {
        e.preventDefault();
        var form = $(this);
        var actionUrl = form.attr('action');

        $.ajax({
            type: "POST",
            url: actionUrl,
            data: form.serialize(),
            dataType: 'json',
            success: function (data) {
                console.log(data);
                if (data.status == 'error') {
                    Swal.fire({
                        title: "Oops...",
                        text: data.info.message,
                        icon: "error",
                        timer: 1000
                    });
                } else {
                        Swal.fire({
                            icon: 'success',
                            title: data.info.message,
                            showConfirmButton: true
                        })
                }
            },
            error: function (error) {
                console.log('lỗi');
            }
        });
    });
</script>