<section class="page-header">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="content">
					<h1 class="page-name">Giỏ hàng</h1>
					<ol class="breadcrumb">
						<li><a href="index.html">Home</a></li>
						<li class="active">cart</li>
					</ol>
				</div>
			</div>
		</div>
	</div>
</section>



<div class="page-wrapper">
  <div class="cart shopping">
    <div class="container">
      <div class="row">
        <div class="col-md-12 col-xs-12 wrapbox-content-cart cart-container">
            <% if(cart.Inventory.length> 0){ %>
                <div class="">
                    <div class="cart-col-left">
                        <div class="main-content-cart">
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <table class="table-cart">
                                <thead>
                                    <tr>
                                        <th class="image">&nbsp;</th>
                                        <th class="item">Tên sản phẩm</th>
                                        <th class="remove">&nbsp;</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% sum=0; products.forEach(function(pro, i){ console.log(pro)%>
                                        <tr class="line-item-container">
                                            <td class="image">
                                                <div class="product_image">
                                                    <a href="/products/<%= pro.Product_slug %>">
                                                        <img src="<%= process.env.DOMAIN_SERVER %>/uploads/<%= pro.Product_image[0] %>" alt="<%= pro.Product_name %>">
                                                    </a>
                                                </div>
                                            </td>
                                            <td class="item">
                                                <a href="/products/<%= pro.Product_slug %>">
                                                    <h3>
                                                        <%= pro.Product_name %>
                                                    </h3>
                                                    </a>
                                                    <p>
                                                    <span>
                                                        <%= Intl.NumberFormat().format(pro.Price) %>₫
                                                    </span>
                                                    
                                                    </p>
                                                    <p class="variant">
                                                        <select class="variant_title" onchange="updateSize(this, '<%= cart.Inventory[i]._id %>')" id="size">
                                                            <% pro.Size.forEach(function(pro1){ %>
                                                                <option value="<%=pro1.Name_size%>" <% if(pro1.Name_size==cart.Inventory[i].Size) { %>
                                                                    selected
                                                                    <% } %>
                                                                        ><%= pro1.Name_size%>
                                                                </option>
                                                                <% }) %>
                                                                    </select>
                                                            
                                                                    </p>
                                                                    <div class="qty quantity-partent qty-click clearfix">
                                        <button onclick="updateQuantity('<%= cart.Inventory[i]._id %>', 'decrease')" type="button"
                                            class="qtyminus qty-btn">-</button>
                                        <input type="text" min="1" value="<%= cart.Inventory[i].Quantity %>" class="tc line-item-qty item-quantity">
                                        <button onclick="updateQuantity('<%= cart.Inventory[i]._id %>', 'increase')" type="button"
                                            class="qtyplus qty-btn">+</button>
                                        </div>
                                        <p class="price">
                                        <span class="line-item-total">
                                            <%= Intl.NumberFormat().format(cart.Inventory[i].Quantity * pro.Price) %>₫
                                        </span>
                                        </p>
                                        </td>
                                        <td class="remove">
                                <a href="javascrip:(0)" onclick="deleteOneCart(`<%= cart.Inventory[i]._id %>`)" class="cart">
                                    <img src="//theme.hstatic.net/1000378196/1000788468/14/ic_close.png?v=54"></a>
                                </td>
                                </tr>
                                <% sum +=cart.Inventory[i].Quantity * pro.Price; }) %>
                                    </tbody>
                                    </table>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-xs-12 text-right">
                                        <p class="order-infor">
                                            Tổng tiền:
                                            <span class="total_price"><b>
                                                    <%= Intl.NumberFormat().format(sum) %>₫
                                                </b></span>
                                            </p>
                                            <div class="cart-buttons">
                                            <a class="button dark mt-20" href="/collections/all" title="Tiếp tục mua hàng"><i class="fa fa-reply"></i>Tiếp
                                                tục mua hàng</a>
                                            <a class="button dark mt-20" href="/checkout">Thanh toán</a>
                                            
                                            </div>
                                            
                                            
                                            </div>
                                            </div>
                </div>
                </div>
                <% } else { %>
                    <section class="empty-cart page-wrapper">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-6 col-md-offset-3">
                                    <div class="block text-center">
                                        <i class="tf-ion-ios-cart-outline"></i>
                                        <h2 class="text-center">Không có gì trong giỏ hàng của bạn.</h2>
                                        <a href="/" class="button dark mt-20">Mua sắm</a>
                                    </div>
                                </div>
                                </div>
                                </section>
                                <% }%>
                                    </div>
                                    <!-- End cart -->
                                    </div>
                                    <!-- End cart -->
        </div>
      </div>
    </div>
  </div>
</div>