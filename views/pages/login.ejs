<section class="signin-page account">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="block text-center">
                    <h2 class="text-center">Đăng Nhập</h2>

                    <form action="/account/login/?from=<%=urlFrom%>" method="post" class="text-left clearfix" id="form">
                        <% if(err){ %>
                            <div class="alert alert-danger" role="alert">
                                <%= err %>
                            </div>
                            <% } %>
                                <div class="form-group">
                                    <input name="username" required type="text" class="form-control"
                                        placeholder="Tài Khoản">
                                </div>
                                <div class="form-group">
                                    <input name="password" required type="password" class="form-control"
                                        placeholder="Mật khẩu">
                                </div>
                                <div class="text-center">
                                    <button type="submit" class="button dark text-center">Đăng Nhập</button>
                                </div>
                    </form>
                    <p class="mt-20">Bạn Chưa Có Tài Khoản ?<a href="/account/register"> Tạo Tài Khoản</a></p>
                </div>
            </div>
        </div>
    </div>
</section>