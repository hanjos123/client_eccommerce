<table id="list" class="datatables-basic table border-top dataTable no-footer dtr-column" id="DataTables_Product"
    role="grid" aria-describedby="DataTables_Product_info" style="width: 1209px">
    <thead>
        <tr role="row">
            <th style="width: 25%">Sản phẩm</th>
            <th style="width: 25%">Danh Mục</th>
            <th style="width: 10%">Giá</th>
            <th style="width: 30%">Giảm giá</th>
            <th style="width: 10%">Chức năng</th>
        </tr>
    </thead>
    <tbody id="listpro">
        <% products.forEach(function(pro){ %>
            <tr>
                <td>
                    <div class="d-flex justify-content-start align-items-center">
                        <div class="avatar-wrapper">
                            <div class="avatar me-2">
                                <span class="avatar-initial rounded-circle bg-label-info">
                                    <img src="<%= process.env.DOMAIN_SERVER %>/uploads/<%= pro.Product_image[0] %>" />
                                </span>
                            </div>
                        </div>
                        <div class="d-flex flex-column">
                            <span class="emp_name text-truncate">
                                <%= pro.Product_name %>
                            </span><small class="emp_post text-truncate text-muted">Software Test
                                Engineer</small>
                        </div>
                    </div>
                </td>
                <td>
                    <% pro.Category_slug.forEach(function(cate){ %>
                        <span class="text-nowrap">
                            <a href="app-user-list.html">
                                <span class="badge bg-label-primary m-1">
                                    <%= cate %>
                                </span>
                            </a>
                        </span>
                        <% }) %>
                </td>
                <td>
                    <%= Intl.NumberFormat().format(pro.Price) %>₫
                </td>
                <td>
                    <% if(pro.Sale){ %>
                        <% if(new Date(pro.Sale.start) < new Date() && new Date() < new Date(pro.Sale.end)){ %>
                            <h6>Bắt đầu: <%= dateformat(pro.Sale.start) %>
                            </h6>
                            <h6>Kết thúc: <%= dateformat(pro.Sale.end) %>
                            </h6>
                            <h6>
                                Giá giảm: <%= Intl.NumberFormat().format(pro.PriceDiscount) %>₫
                            </h6>
                            <% } %>
                                <% } %>
                </td>
                <td>
                    <div class="d-inline-block">
                        <a href="javascript:;" class="btn btn-sm btn-icon dropdown-toggle hide-arrow"
                            data-bs-toggle="dropdown"><i class="bx bx-dots-vertical-rounded"></i></a>
                        <div class="dropdown-menu dropdown-menu-end">
                            <a href="/admin/products/edit/<%=pro._id%>" class="dropdown-item">Chỉnh sửa</a>
                            <a href="javascript:(0)" onclick="duplicateProduct('<%= pro._id %>')"
                                class="dropdown-item">Nhân đôi</a>
                            <div class="dropdown-divider"></div>
                            <a href="javascript:(0)" onclick="deleteProduct('<%= pro._id %>', this)"
                                class="dropdown-item text-danger delete-record">Xóa</a>
                        </div>
                    </div>
                </td>
            </tr>
            <% }) %>
    </tbody>
    <tfoot>
        <tr>
            <th style="width: 25%">Sản phẩm</th>
            <th style="width: 25%">Danh Mục</th>
            <th style="width: 10%">Giá</th>
            <th style="width: 30%">Giảm giá</th>
            <th style="width: 10%">Chức năng</th>
        </tr>
    </tfoot>
</table>